<div
  class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8"
  x-data="{loginForm: true, pwRecoverForm: false}"
>
  <div
    class="max-w-md w-full space-y-8"
    x-show="loginForm"
  >
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Sign in to your account</h1>
    </div>
    <div class="mt-8">
      {% form 'customer_login' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold"> Error! </strong>
            <p class="block: sm:inline">
              {{ form.errors | default_errors }}
            </p>
          </div>
        {% endif %}
        <div class="my-2">
          <label
            for="email_address"
          >
            Email Address
          </label>
          <input
            class="relative block w-full px-3 py-2 border"
            placeholder="Email address"
            type="email"
            name="customer[email]"
            id="email_address"
            autocomplete="email"
          >
        </div>
        {% if form.password_needed %}
          <div class="my-2">
            <label
              for="password"
            >
              Password
            </label>
            <input
              class="relative block w-full px-3 py-2 border"
              placeholder="Password"
              type="password"
              name="customer[password]"
              id="password"
              autocomplete="current-password"
            >
          </div>
        {% endif %}
        <div class="my-2 text-sm">
          <a
            href="#"
            class="underline text-gray-500 hover:text-gray-900"
            x-on:click="loginForm = false; pwRecoverForm = true"
          >
            Forgot your password?
          </a>
        </div>
        <div>
          <button
            type="submit"
            class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900"
          >
            Sign in
          </button>
        </div>
      {% endform %}
    </div>
    {% if shop.checkout.guest_login %}
      <hr class="my-12">
      <div>
        <h1 class="mt-6 text-center text-3xl font-bold">Continue as a guest</h1>
      </div>
      {% form 'guest_login' %}
        <div>
          <button
            type="submit"
            class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900"
          >
            Continue
          </button>
        </div>
      {% endform %}
    {% endif %}
  </div>
  <div
    class="max-w-md w-full space-y-8"
    x-show="pwRecoverForm"
  >
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Recover your password</h1>
    </div>
    <div class="mt-8">
      {% form 'recover_customer_password' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold"> Error! </strong>
            <p class="block: sm:inline">
              {{ form.errors | default_errors }}
            </p>
          </div>
        {% endif %}
        <div class="my-2">
          <label
            for="Email"
          >
            Email Address
          </label>
          <input
            class="relative block w-full px-3 py-2 border"
            placeholder="Email address"
            type="email"
            name="email"
            id="email"
            autocomplete="email"
          >
        </div>
        <div>
          <button
            type="submit"
            class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900"
          >
            Recover Password
          </button>
        </div>
        <div class="mt-2 text-sm">
          <a
            href="#"
            class="underline text-gray-500 hover:text-gray-900"
            x-on:click="loginForm = true; pwRecoverForm = false"
          >
            Back to Login
          </a>
        </div>
      {% endform %}
    </div>
  </div>
</div>
