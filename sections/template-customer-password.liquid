<div
  class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8"
>
  <div
    class="max-w-md w-full space-y-8"
  >
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Reset Password</h1>
    </div>

    {%- form 'reset_customer_password' -%}
      {% if form.errors %}
        <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
          <strong class="font-bold"> Error! </strong>
          <p class="block: sm:inline">
            {{ form.errors | default_errors }}
          </p>
        </div>
      {% endif %}
      <div>
        <div class="my-2">
          <label
            for="password"
          >
            Password
          </label>
          <input
            class="relative block w-full px-3 py-2 border"
            type="password"
            name="customer[password]"
            id="password"
          >
        </div>

        <div class="my-2">
          <label
            for="password_confirmation"
          >
            Confirm password
          </label>
          <input
            class="relative block w-full px-3 py-2 border"
            type="password"
            name="customer[password_confirmation]"
            id="password_confirmation"
          >
        </div>
        <div>
          <button
            type="submit"
            class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900"
          >
            Reset password
          </button>
        </div>
      </div>
    {%- endform -%}
  </div>
</div>
